<h3>Articles !</h3>
<table border = 1>
  <tr>
  <p>
    <th><strong>Title</strong></th>
    <td><%= @article.title %></td>
  </p>
  </tr>
  <tr>
  <p>
    <th><strong>Text</strong></th>
    <td><%= @article.text %></td>
  </p>
  </tr>
</table>

<h3>Comments</h3>
<%= render @article.comments %>

<h4>Add a comment</h4>
<%= render 'comments/form' %>

<center>
  <%= link_to "Edit Article", edit_article_path(@article) %><br>
  <%= link_to "welcome", controller: 'welcome' %><br>
  <%= link_to "Go back!", articles_path %>
</center>

